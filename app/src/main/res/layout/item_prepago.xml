<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_mesa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvIdListaMultiple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cobro 1"
                    android:background="@drawable/boton_redondo_gris"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="18dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivListaMultiple"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/tarjeta_pasivo_32x32">
            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="Monto"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvMontoMultiple"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    android:text="s/160.00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referencia"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvReferenciaMultiple"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="*****1234"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivEliminarMultiple"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/eliminar_24x24">
            </ImageView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>