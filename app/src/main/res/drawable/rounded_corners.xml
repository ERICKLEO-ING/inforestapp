<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="#1E2947" /> <!-- Sombra con color rgba(30, 41, 71, 0.14) -->
            <corners android:radius="24px" />  <!-- Bordes redondeados -->
            <padding
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="2dp" /> <!-- Padding para el efecto de sombra -->
        </shape>
    </item>

    <!-- Fondo principal -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />  <!-- Fondo blanco, similar a #FFF -->
            <corners android:radius="24px" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</layer-list>
